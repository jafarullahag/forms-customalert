<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Custom.Popup" x:Class="Custom.Popup.MainPage"
             BackgroundColor="White">
    <StackLayout VerticalOptions="CenterAndExpand" Padding="10">
        <!-- Place new controls here -->
        <Button  Grid.Row="3" Text="Simple Alert with OK" BorderRadius="28" Command="{Binding OkCommand}" VerticalOptions="Center" BackgroundColor="#4CD6A3" HeightRequest="55"  TextColor="White"  />
        <Button  Grid.Row="4" Text="Confirmation Alert" BorderRadius="28" Command="{Binding ConfirmCommand}" VerticalOptions="Center"  BackgroundColor="#017AFF" HeightRequest="55" TextColor="White" />
    </StackLayout>
</ContentPage>